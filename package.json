{
  "name": "fromyourphone",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Self-hosted phone UI to control OpenCode, Codex CLI, and Claude Code.",
  "license": "MIT",
  "bin": {
    "fromyourphone": "./dist/cli.js"
  },
  "scripts": {
    "dev": "concurrently -k -n SERVER,WEBBUILD -c cyan,magenta \"tsx watch server/src/index.ts\" \"vite build --watch\"",
    "dev:web": "vite --host 127.0.0.1 --port 5173",
    "build": "npm run build:web && npm run build:server && npm run build:cli",
    "build:web": "vite build",
    "build:server": "tsc -p server/tsconfig.json",
    "build:cli": "tsc -p tools/tsconfig.json",
    "start": "node dist/server/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc -p server/tsconfig.json --noEmit && tsc -p tools/tsconfig.json --noEmit && tsc -p web/tsconfig.json --noEmit"
  },
  "dependencies": {
    "@fastify/compress": "^8.0.1",
    "@fastify/cookie": "^11.0.2",
    "@fastify/helmet": "^12.0.1",
    "@fastify/static": "^8.2.0",
    "@fastify/websocket": "^11.1.0",
    "@fontsource/ibm-plex-mono": "^5.1.0",
    "@fontsource/ibm-plex-sans": "^5.1.0",
    "@iarna/toml": "^2.2.5",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/xterm": "^6.0.0",
    "better-sqlite3": "^11.8.0",
    "fastify": "^5.2.1",
    "nanoid": "^5.1.5",
    "node-pty": "^1.1.0-beta21",
    "open": "^10.1.0",
    "qrcode-terminal": "^0.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ws": "^8.19.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.13.1",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/ws": "^8.5.14",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^5.4.14",
    "vitest": "^2.1.8"
  }
}
